<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <EnvironmentVariables>
      <!-- Auto-detect Visual Studio installation path -->
      <VSINSTALLDIR Condition="'$(VSINSTALLDIR)' == ''">$([MSBuild]::GetVsInstallationPath('2022'))</VSINSTALLDIR>
      <PATH>$(VSINSTALLDIR)Common7\Tools;$(PATH)</PATH>
    </EnvironmentVariables>
    <ResultsDirectory>TestResults</ResultsDirectory>
    <CollectSourceInformation>false</CollectSourceInformation>
  </RunConfiguration>
</RunSettings>